{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react",
    "lib": ["DOM", "ES2015", "ES6", "DOM.Iterable", "ScriptHost"],
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noEmit": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        
      }
    ]
  },
  "include": [
    "src/**/*"
  ]
}